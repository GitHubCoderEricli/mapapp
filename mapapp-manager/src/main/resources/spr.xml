    <context:property-placeholder location="classpath:sys.properties"/>
    <context:annotation-config/>
    <context:component-scan base-package="com.huashan.core" />
    <mvc:annotation-driven />

    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/**"/>
            <mvc:exclude-mapping path="/.jsp" />
            <bean class="com.huashan.core.interceptor.UserInterceptorAdaptor"></bean>
        </mvc:interceptor>
    </mvc:interceptors>

    <!--视图渲染-->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/classes/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <!-- 上传文件 -->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="defaultEncoding" value="utf-8"/>
        <!-- 最大内存大小 -->
        <property name="maxInMemorySize" value="10240"/>
        <!-- 最大文件大小，-1为不限制大小 -->
        <property name="maxUploadSize" value="${maxUploadSize}"/>
    </bean>

